<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circular_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:src="@drawable/umalogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/firstname"
         />

    <AutoCompleteTextView
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/icon_person"
        android:drawableLeft="@drawable/firstname"
        android:drawablePadding="10dp"
        android:hint="First Name"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/circular_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/secoundname"
 />

    <AutoCompleteTextView
        android:id="@+id/secoundname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/icon_person"
        android:drawableLeft="@drawable/firstname"
        android:drawablePadding="10dp"
        android:hint="Secound Name"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/firstname"
        app:layout_constraintStart_toStartOf="@id/firstname"
        app:layout_constraintEnd_toEndOf="@id/firstname"
        app:layout_constraintBottom_toTopOf="@id/phonenumber"
         />

    <AutoCompleteTextView
        android:id="@+id/phonenumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
        android:drawableLeft="@drawable/phonenum"
        android:drawablePadding="10dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/secoundname"
        app:layout_constraintStart_toStartOf="@id/secoundname"
        app:layout_constraintEnd_toEndOf="@id/secoundname"
        app:layout_constraintBottom_toTopOf="@id/EmailManage"
 />

    <AutoCompleteTextView
        android:id="@+id/EmailManage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/msg"
        android:drawablePadding="10dp"
        android:hint="@string/emailReg"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/phonenumber"
        app:layout_constraintStart_toStartOf="@id/phonenumber"
        app:layout_constraintEnd_toEndOf="@id/phonenumber"
        app:layout_constraintBottom_toTopOf="@id/UpdateProfile"
         />

    <Button
        android:id="@+id/UpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/btnsignin_gradient"
        android:text="Update Profile Info"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/EmailManage"
        app:layout_constraintStart_toStartOf="@id/EmailManage"
        app:layout_constraintEnd_toEndOf="@id/EmailManage"
        app:layout_constraintBottom_toTopOf="@id/UpdateProfileInfo"
 />

    <Button
        android:id="@+id/UpdateProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/btnsignin_gradient"
        android:text="Retrive Profile Info"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/UpdateProfile"
        app:layout_constraintStart_toStartOf="@id/UpdateProfile"
        app:layout_constraintEnd_toEndOf="@id/UpdateProfile"
 />


</androidx.constraintlayout.widget.ConstraintLayout>