<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circular_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:src="@drawable/umalogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <AutoCompleteTextView
        android:id="@+id/firstname"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect"
        android:drawableLeft="@drawable/firstname"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/icon_person"
        android:hint="First Name"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/circular_image"
        app:layout_constraintStart_toStartOf="@id/circular_image"
        app:layout_constraintEnd_toEndOf="@id/circular_image"
        />

    <AutoCompleteTextView
        android:id="@+id/secoundname"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect"
        android:drawableLeft="@drawable/firstname"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/icon_person"
        android:hint="Secound Name"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="@id/firstname"
        app:layout_constraintStart_toStartOf="@id/firstname"
        app:layout_constraintTop_toBottomOf="@id/firstname"
        />

    <AutoCompleteTextView
        android:id="@+id/phonenumber"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect"
        android:drawableLeft="@drawable/phonenum"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
        android:hint="Phone Number"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/secoundname"
        app:layout_constraintStart_toStartOf="@id/secoundname"
        app:layout_constraintEnd_toEndOf="@id/secoundname"
        />

    <AutoCompleteTextView
        android:id="@+id/EmailManage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/msg"
        android:drawablePadding="10dp"
        android:hint="@string/emailReg"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/phonenumber"
        app:layout_constraintStart_toStartOf="@id/phonenumber"
        app:layout_constraintEnd_toEndOf="@id/phonenumber"
        android:layout_margin="20dp"
        />

    <Button
    android:id="@+id/UpdateProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@drawable/btnsignin_gradient"
    android:text="Profile Info"
    android:textColor="#FFFFFF"
    android:layout_margin="30dp"
    app:layout_constraintTop_toBottomOf="@id/EmailManage"
    app:layout_constraintEnd_toEndOf="@id/phonenumber"
    app:layout_constraintStart_toStartOf="parent"
    />







</androidx.constraintlayout.widget.ConstraintLayout>